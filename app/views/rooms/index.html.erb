<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Location</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.title %></td>
    <td><%= room.location %></td>
    <td><%= room.description %></td>
    <td><%= link_to t('links.show'), room %></td>
    <td><%= link_to t('links.edit'), edit_room_path(room) %></td>
    <td><%= link_to t('links.delete'), room, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

